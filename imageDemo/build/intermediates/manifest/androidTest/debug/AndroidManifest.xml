<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.loveplusplus.demo.image.test" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.loveplusplus.demo.image.test"
        android:targetPackage="com.loveplusplus.demo.image.test" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.loveplusplus.demo.image.MyApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.loveplusplus.demo.image.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.loveplusplus.demo.image.ImagePagerActivity"
            android:theme="@style/AppTheme.NoTitleBar" />
    </application>

</manifest>