<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:scrollbars="none"
    tools:context="com.zwd.express.Context.homePage.View.HomePageActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.amap.api.maps2d.MapView
            android:id="@+id/homepage_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zwd.express.layout.HomeToolBar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/centerimg_location"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/icon_locate"
                    android:layout_centerInParent="true"
                    />

            <ImageView
                android:id="@+id/coversitionlist"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/icon_message_no"
                android:layout_alignParentRight="true"
                android:layout_below="@id/toolbar"
                android:layout_marginTop="@dimen/dp_8"/>
            <ImageView
                android:id="@+id/locate"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/icon_img_locate"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_8"/>

            <RelativeLayout
                android:id="@+id/viewpager"
                android:layout_marginTop="130dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
               >
                    <ImageView
                        android:id="@+id/close_viewpager"
                        android:layout_width="@dimen/dp_56"
                        android:layout_height="@dimen/dp_56"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/icon_viewpager_close"/>

                <com.zwd.express.Widget02.banner.BannerViewPager
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:background="@mipmap/bg_viewpager"
                    android:padding="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_below="@id/close_viewpager"
                    app:layout_scrollFlags="scroll|enterAlways"/>

            </RelativeLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_bottom_take"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:background="@mipmap/bg_homepage_edit"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="146dp">
                        <com.zwd.express.Widget02.xiuxiu.RippleSpreadView
                            android:id="@+id/ripperView"
                            xmlns:RippleWaveView="http://schemas.android.com/apk/res-auto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="-110dp"
                            RippleWaveView:rsv_innerAnimDuration="3000"
                            RippleWaveView:rsv_outCircleColor="@color/main"
                            RippleWaveView:rsv_innerSize="120dp"
                            RippleWaveView:rsv_outAnimDuration="3000"
                            RippleWaveView:rsv_outSize="240dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="扫描订单"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="100dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_14"/>

                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_take"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_48"
                            android:gravity="center"
                            android:hint="您的目的地是?"
                            android:background="@null"
                            android:focusableInTouchMode="false"
                            android:theme="@style/NormalEdit"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/gray"
                            android:layout_marginBottom="@dimen/dp_16"/>
                    </LinearLayout>

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:background="@mipmap/bg_order">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                    </LinearLayout>
                </ScrollView>
                <LinearLayout
                    android:id="@+id/ll_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_48"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/circle_green"
                                android:layout_marginLeft="@dimen/dp_16"/>

                            <TextView
                                android:id="@+id/txt_location"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:focusableInTouchMode="false"
                                android:hint="物品位置"
                                android:background="@null"
                                android:theme="@style/NormalEdit"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/order_out"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_32"
                            android:src="@mipmap/icon_order_up"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_8"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/gray"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle_green"
                            android:layout_marginLeft="@dimen/dp_16"/>
                        <TextView
                            android:id="@+id/txt_destin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:focusableInTouchMode="false"
                            android:hint="送达位置"
                            android:background="@null"
                            android:theme="@style/NormalEdit"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/gray"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle_green"
                            android:layout_marginLeft="@dimen/dp_16"/>
                        <TextView
                            android:id="@+id/txt_reachtime"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="您希望的送达时间"
                            android:focusableInTouchMode="false"
                            android:background="@null"
                            android:theme="@style/NormalEdit"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/circle_green"
                        android:layout_marginLeft="@dimen/dp_16"/>
                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="您的姓名"
                        android:theme="@style/NormalEdit"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/circle_green"
                        android:layout_marginLeft="@dimen/dp_16"/>
                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="您的电话"
                        android:phoneNumber="true"
                        android:theme="@style/NormalEdit"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/take_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dp_16"
                        android:paddingTop="@dimen/dp_16">

                        <ImageView
                            android:id="@+id/take_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle_yello"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:text="拿东西"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buy_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="@dimen/dp_16"
                        android:paddingBottom="@dimen/dp_16"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/buy_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle_empty"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="买东西"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/black"
                            android:layout_marginLeft="@dimen/dp_8"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray"/>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/buy_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:scrollbars="none"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_marginBottom="@dimen/dp_16">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/circle_green"
                                    android:layout_marginLeft="@dimen/dp_16"/>
                                <EditText
                                    android:id="@+id/buy_description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="您需要买的东西请以“物品×数量”的格式填写"
                                    android:theme="@style/NormalEdit"/>
                            </LinearLayout>
                        </ScrollView>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/gray"
                        android:layout_marginLeft="@dimen/dp_16"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle_green"
                            android:layout_marginLeft="@dimen/dp_16"/>
                        <EditText
                            android:id="@+id/money_thing"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint="00.00元"
                            android:phoneNumber="true"
                            android:theme="@style/NormalEdit"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(物品价格,请填写最接近的价格,多退少补)"
                            android:textSize="@dimen/sp_10"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/take_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scrollbars="none"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_16">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/circle_green"
                                android:layout_marginLeft="@dimen/dp_16"/>
                            <EditText
                                android:id="@+id/take_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="您有什么要求?"
                                android:theme="@style/NormalEdit"/>
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:background="@color/gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/circle_green"
                        android:layout_marginLeft="@dimen/dp_16"/>
                    <EditText
                        android:id="@+id/reward"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="3.00元"
                        android:phoneNumber="true"
                        android:theme="@style/NormalEdit"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(平台将抽取20%的打赏作为手续费)"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16">
                    <TextView
                        android:id="@+id/money_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥3.00"
                        android:textColor="@color/black"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8"
                        android:textSize="@dimen/sp_40"/>
                    <TextView
                        android:id="@+id/place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/bg_order_btn"
                        android:layout_alignParentRight="true"
                        android:text="下单"
                        android:textSize="@dimen/sp_17"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_order"
                android:layout_width="120dp"
                android:layout_height="@dimen/dp_48"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:background="@mipmap/bg_homepage_btn_left"
                android:layout_above="@+id/ll_bottom"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_alignParentStart="true">
                <TextView
                    android:id="@+id/order_set"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="下单"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/order_take"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="接单"
                    android:textColor="@color/gray03"/>
            </LinearLayout>


        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"/>

    <!--fragment
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:name="com.zwd.express.Context.homePage.View.LeftFragment"
        android:layout_gravity="left"
        tools:layout="@layout/fragment_left"/>-->

</android.support.v4.widget.DrawerLayout>
