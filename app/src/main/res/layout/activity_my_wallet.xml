<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg_myorder"
    tools:context="com.zwd.express.Context.myWallet.View.MyWalletActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yello"
        android:orientation="vertical">
        <com.zwd.express.layout.NormalToolBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/surplus"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:text="¥100.00"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_16"
            android:textSize="60sp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_16">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值"
            android:textSize="@dimen/sp_18"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_06"/>
        <ImageView
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:padding="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:src="@mipmap/right"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray_09"/>
    <RelativeLayout
        android:id="@+id/withdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_16">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现"
            android:textSize="@dimen/sp_18"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_06"/>
        <ImageView
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:padding="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:src="@mipmap/right"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray_09"/>
    <RelativeLayout
        android:id="@+id/chit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_16">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="代金券"
            android:textSize="@dimen/sp_18"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_06"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2张"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/gray_07"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:padding="@dimen/dp_16"
                android:src="@mipmap/right"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
