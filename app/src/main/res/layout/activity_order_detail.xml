<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_myorder"
    android:orientation="vertical"
    tools:context="com.zwd.express.Context.orderDetail.View.OrderDetailActivity">
    <com.zwd.express.layout.NormalToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:background="@mipmap/bg_orderdetail_top">
            <View
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_2"
                android:background="@mipmap/icon_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_32">
                <LinearLayout
                    android:id="@+id/ll_goodsaddressword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="vertical"
                    android:gravity="bottom">
                    <TextView
                        android:id="@+id/txt_goodsaddressword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物品位置"
                        android:textColor="@color/gray_06"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginBottom="@dimen/dp_4"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/gray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="vertical"
                    android:gravity="bottom">
                    <TextView
                        android:id="@+id/txt_addressword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="送达地址"
                        android:textColor="@color/gray_06"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginBottom="@dimen/dp_4"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/gray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_32"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_take"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle_yello"/>
                        <TextView
                            android:id="@+id/txt_take"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="拿东西"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/black"
                            android:layout_marginLeft="@dimen/dp_8"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_buy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle_empty02"/>
                        <TextView
                            android:id="@+id/txt_buy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="买东西"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/gray_05"
                            android:layout_marginLeft="@dimen/dp_8"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scrollbars="none">
                    <TextView
                        android:id="@+id/txt_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注"
                        android:textColor="@color/gray_06"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:textSize="@dimen/sp_14"/>
                </ScrollView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray"/>
                <LinearLayout
                    android:id="@+id/ll_money"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="vertical"
                    android:gravity="bottom">
                    <TextView
                        android:id="@+id/txt_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物品价格"
                        android:textColor="@color/gray_06"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginBottom="@dimen/dp_4"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/gray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="vertical"
                    android:gravity="bottom">
                    <TextView
                        android:id="@+id/txt_reward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="打赏钱"
                        android:textColor="@color/gray_06"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginBottom="@dimen/dp_4"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/gray"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_orderdetail_bottom"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_below="@+id/ll"
            android:weightSum="1">
            <View
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_2"
                android:background="@mipmap/icon_line_green"/>
            <LinearLayout
                android:id="@+id/ll_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_20"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="vertical"
                    android:gravity="bottom">
                    <TextView
                        android:id="@+id/txt_Acceptname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="跑腿人姓名"
                        android:textColor="@color/gray_06"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginBottom="@dimen/dp_4"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/gray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="vertical"
                    android:gravity="bottom">
                    <TextView
                        android:id="@+id/txt_Acceptphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="跑腿人电话"
                        android:textColor="@color/gray_06"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginBottom="@dimen/dp_4"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/gray"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/txt_cancle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="已取消订单"
                android:textColor="@color/gray_07"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp_16"
                android:textSize="@dimen/sp_18"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/btn"
            android:layout_below="@id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_10"
            android:theme="@style/Btn_Black"
            android:text="删除订单"/>
    </RelativeLayout>






</LinearLayout>
