<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_myorder"
    android:orientation="vertical"
    tools:context="com.zwd.express.Context.forgetPsw.View.ForgetPswActivity">
    <com.zwd.express.layout.NormalToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"/>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电    话:"
                android:textColor="@color/gray_07"
                android:textSize="@dimen/sp_16"
                />

            <EditText
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:background="@null"
                android:hint="请输入手机号"
                android:phoneNumber="true"
                android:textColor="@color/gray_06"
                android:textColorHint="@color/gray_11"
                android:textSize="@dimen/sp_16"
                />
            <TextView
                android:id="@+id/inform"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(请输入正确的手机号码)"
                android:textColor="@color/pink"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_32"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="@dimen/dp_2"
                android:gravity="end"
                android:text="(60s)"
                android:layout_marginBottom="@dimen/dp_2"
                android:textColor="@color/gray_07"/>

            <ImageView
                android:id="@+id/img_verify"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:src="@mipmap/icon_unverify"
                />
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_verify"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_40"
            android:paddingRight="@dimen/dp_40"
            android:background="@color/white"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_32"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码:"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/gray_07"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="@dimen/dp_8"/>
                <EditText
                    android:id="@+id/verify"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="match_parent"
                    android:textColorHint="@color/gray_06"
                    android:textSize="@dimen/sp_16"
                    android:gravity="center"
                    android:phoneNumber="true"
                    android:background="@drawable/bg_verify"/>
                <TextView
                    android:id="@+id/txt_false"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(验证码错误)"
                    android:textColor="@color/pink"
                    android:textSize="@dimen/sp_12"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/dp_10"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码:"
            android:textColor="@color/gray_07"
            android:textSize="@dimen/sp_16"
            />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_8"
            android:background="@null"
            android:password="true"
            android:hint="请输入新密码"
            android:textColor="@color/gray_06"
            android:textColorHint="@color/gray_11"
            android:textSize="@dimen/sp_16"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请确认:"
            android:textColor="@color/gray_07"
            android:textSize="@dimen/sp_16"
            />

        <EditText
            android:id="@+id/newPSW"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_8"
            android:background="@null"
            android:hint="请再次输入新密码"
            android:textColor="@color/gray_06"
            android:password="true"
            android:textColorHint="@color/gray_11"
            android:textSize="@dimen/sp_16"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray"/>
    <TextView
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认重置"
        android:theme="@style/Btn_Gray"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_24"/>

</LinearLayout>
