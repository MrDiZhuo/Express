<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="@mipmap/bg_item_myorder"
    android:layout_marginBottom="@dimen/dp_8">
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_56"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/stu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="从"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/yello_02"/>
                <TextView
                    android:id="@+id/from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物品地址"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:singleLine="true"
                    android:ellipsize="middle"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="至"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/yello_02"/>
                <TextView
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到达地址"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:singleLine="true"
                    android:ellipsize="middle"/>
            </LinearLayout>
        </LinearLayout>

            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_yello"
                android:id="@+id/money"
                android:gravity="center"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="¥3.00"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:background="@color/gray_05"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_16">
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单时间"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/gray_05"/>
        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已取消"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>